<h2>Editer le gossip</h2>

<%=form_for @gossip do |f|%>

	<div class= 'form-group'>
		<label>Title</label>
		<%= f.text_field :title, class:'form-control'%>
	</div>	

	<div class= 'form-group'>
		<label>Content</label>
		<%= f.text_area :content, class:'form-control'%>
	</div>

	<div>
		  <button type="submit" class ="btn btn-primary"> Modifier le gossip</button>

	</div>

<%end%>	